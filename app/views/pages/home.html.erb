<% if user_signed_in? %>
  <div class= "homepage">
    <div class="homepagetop">
      <p class= "hpw"><%= "Hi #{current_user&.username} ðŸ–"%></p>
      <p class= "hpw2">Welcome to the home page</p>

      <form novalidate="novalidate" class="simple_form search" action="/sport_events" accept-charset="UTF-8" method="GET">
        <div class="search-form-control form-group">
          <input class="form-control string required" type="text" name="query" id="search_query" />
          <button name="button" type="submit" class="btn btn-flat">
            <i class="fas fa-search"></i> Search
          </button>
        </div>
      </form>

     <p class= "hpw3">Checkout the Latest events below</p>
   </div>
  <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <% @sport_events.each_slice(2).map.each do |event| %>
        <div class="carousel-item active" data-bs-interval="3000">
          <div class= "d-flex">

            <div class= "cards">
                <div class="card">
                  <div class="card-text">
                    <h2><%= event[0].sport %></h2>
                    <p><%= event[0].address %></p>
                  </div>
                </div>
            </div>

            <% if event[1] %>

            <div class= "cards">
                <div class="card">
                  <div class="card-text">
                    <h2><%= event[1].sport %></h2>
                    <p><%= event[1].address %></p>
                  </div>
                </div>
            </div>

            <% if event[1] %>

              <div class= "cards">
                <div class="card">
                  <div class="card-text">
                    <h2><%= event[1].sport %></h2>
                    <p><%= event[1].address %></p>
                  </div>
                </div>
            </div>
            <% end %>

            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div id='map' style='width: 400px; height: 300px;' data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
